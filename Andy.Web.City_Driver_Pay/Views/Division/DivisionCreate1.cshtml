<form>
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <!-- Division Name -->
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">Division Name</label>
                    <div class="col-sm-7">
                        <select class="form-select form-select-sm" id="divisionName" name="divisionName">
                            <option value="">Select Division</option>
                            <option value="division1">DUMP</option>
                            <option value="division2">DRY</option>
                            <option value="division3">CART</option>
                            <option value="division4">D4AX</option>
                            <option value="division5">FLAT</option>
                            <option value="division6">INTER</option>
                            <option value="division7">REEF</option>
                        </select>
                    </div>
                </div>

                <!-- Driver Name -->
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">Driver Name</label>
                    <div class="col-sm-7">
                        <select class="form-select form-select-sm" id="DriverName" name="DriverName">
                            <option value="">Select Driver</option>
                            <option value="Driver1">AOMAR</option>
                            <option value="Driver2">BUBAKER</option>
                            <option value="Driver3">AHMED</option>
                            <option value="Driver4">KHALED</option>
                            <option value="Driver5">MOHSEN</option>
                            <option value="Driver6">FLAT</option>
                            <option value="Driver7">HAILE WELDU</option>
                            <option value="Driver8">ZEKREYA</option>
                        </select>
                    </div>
                </div>

                <!-- Pay Rate -->
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">Pay Rate</label>
                    <div class="col-sm-7">
                        <input class="form-control form-control-sm" type="number" name="payRate" />
                    </div>
                </div>

                <!-- Overtime Pay Rates -->
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">OT Pay Rate</label>
                    <div class="col-sm-7">
                        <input class="form-control form-control-sm" type="number" name="overtimePayRate" />
                    </div>
                </div>
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">OT Pay Evening</label>
                    <div class="col-sm-7">
                        <input class="form-control form-control-sm" type="number" name="overtimePayEveningRate" />
                    </div>
                </div>
                <div class="mb-2 row">
                    <label class="col-sm-5 col-form-label" style="font-size:14px;">OT Pay Night</label>
                    <div class="col-sm-7">
                        <input class="form-control form-control-sm" type="number" name="overtimePayNightRate" />
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="row justify-content-between mt-2">
                    <div class="col-5">
                        <a class="btn btn-primary btn-sm w-100" href="@Url.Action("Index")">Back</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Create" class="btn btn-success btn-sm w-100" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Select2 CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#divisionName, #DriverName').select2({
                placeholder: "Select an option",
                allowClear: true,
                width: '100%'
            });
        });
    </script>
</form>



